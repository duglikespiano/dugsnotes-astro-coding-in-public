---
// Component imports
import MainLayout from '../../layouts/MainLayout.astro';
import PostCard from '../../components/PostCard.astro';

// utiles imports
import { formatBlogPosts } from '../../js/utils';

const allPostsMarkdowns = import.meta.glob<Post>('./*.md', { eager: true });
const postsContent = Object.values(allPostsMarkdowns) as Post[];
const formattedPosts = formatBlogPosts(postsContent, {
	filterOutDrafts: false,
	filterOutFuturePosts: false,
	sortByDate: false,
	limit: 6,
}) as Post[];

type Post = {
	frontmatter: {
		title: string;
		date: string;
		tags?: string[];
	};
	url: string;
};
---

<MainLayout title="My Blog" description="My Blog">
	<section class="container" aria-label="New Blog Posts">
		<h1 class="h1">New Blog Posts</h1>
		<div class="post-container">
			{formattedPosts.map((post) => <PostCard frontmatter={post.frontmatter} url={post.url} tagType="h2" />)}
		</div>
	</section>
</MainLayout>
